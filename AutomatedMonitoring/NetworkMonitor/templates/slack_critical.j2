{
  "blocks": [
    {
      "type": "header",
      "text": {
        "type": "plain_text",
        "text": "üö® CRITICAL ALERT - Immediate Action Required",
        "emoji": true
      }
    },
    {
      "type": "divider"
    },
    {
      "type": "section",
      "fields": [
        {
          "type": "mrkdwn",
          "text": "*Device:*\n{{ alert.device_name }} ({{ alert.device_ip }})"
        },
        {
          "type": "mrkdwn",
          "text": "*Metric:*\n{{ alert.metric_name }}"
        }
      ]
    },
    {
      "type": "section",
      "fields": [
        {
          "type": "mrkdwn",
          "text": "*Current Value:*\n{{ alert.metric_value }}"
        },
        {
          "type": "mrkdwn",
          "text": "*Threshold:*\n{{ alert.threshold }}"
        }
      ]
    },
    {
      "type": "section",
      "text": {
        "type": "mrkdwn",
        "text": "*Description:*\n{{ alert.description }}"
      }
    },
    {
      "type": "divider"
    },
    {
      "type": "section",
      "text": {
        "type": "mrkdwn",
        "text": "*üè¢ Business Impact:*"
      }
    },
    {
      "type": "section",
      "fields": [
        {
          "type": "mrkdwn",
          "text": "*Affected Services:*\n{% for service in alert.affected_services %}‚Ä¢ {{ service.name }} (Priority: {{ service.priority }})\n{% endfor %}"
        }
      ]
    },
    {
      "type": "divider"
    },
    {
      "type": "section",
      "text": {
        "type": "mrkdwn",
        "text": "*üîß Resolution Steps:*"
      }
    },
    {
      "type": "section",
      "text": {
        "type": "mrkdwn",
        "text": "{% for step in alert.resolution_steps %}{{ loop.index }}. {{ step }}\n{% endfor %}"
      }
    },
    {
      "type": "divider"
    },
    {
      "type": "section",
      "text": {
        "type": "mrkdwn",
        "text": "*üë• Escalation Path:*\n{% for level in alert.escalation_path %}{{ loop.index }}. {{ level }}\n{% endfor %}"
      }
    },
    {
      "type": "divider"
    },
    {
      "type": "context",
      "elements": [
        {
          "type": "mrkdwn",
          "text": "Alert ID: {{ alert.id }} | Generated: {{ alert.timestamp | datetime }}"
        }
      ]
    },
    {
      "type": "actions",
      "elements": [
        {
          "type": "button",
          "text": {
            "type": "plain_text",
            "text": "Acknowledge",
            "emoji": true
          },
          "style": "primary",
          "value": "acknowledge_{{ alert.id }}"
        },
        {
          "type": "button",
          "text": {
            "type": "plain_text",
            "text": "Escalate",
            "emoji": true
          },
          "style": "danger",
          "value": "escalate_{{ alert.id }}"
        },
        {
          "type": "button",
          "text": {
            "type": "plain_text",
            "text": "View Details",
            "emoji": true
          },
          "value": "details_{{ alert.id }}"
        }
      ]
    }
  ]
}
